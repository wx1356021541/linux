#include <stdio.h>
#include <stdlib.h>

int mysys( char* command)
{
    pid_t pid;
    int status;

    if(command == NULL)
    {  
        return (1);
    }
    if((pid = fork())<0)
    {
    	status = -1;
    }
    else if(pid == 0)
    {
        execl("/bin/sh", "sh", "-c", command, (char *)0);
        -exit(127); 
    }
    else
    {
        while(waitpid(pid, &status, 0) < 0)
		{
        	if(errno != EINTER)
			{
        		status = -1;
            	break;
        	}
        }
    }
    return status;
}
int main()
{
    printf("--------------------------------------------------\n");
    mysys("echo HELLO WORLD");
    printf("--------------------------------------------------\n");
    mysys("ls /");
    printf("--------------------------------------------------\n");
    return 0;
}
